sudo pacman-mirrors -i -c China -m rank
sudo pacman -Syyu
sudo pacman -S vim git pacaur --needed
sudo cat >> /etc/pacman.conf <<EOF
[archlinuxcn]
Server = https://mirrors.ustc.edu.cn/archlinuxcn/$arch
EOF
pacaur -S archlinuxcn-keyring 
pacaur -Syy
